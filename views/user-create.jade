extends layout

block content
  .container
    .row.col-md-10.col-md-offset-1
      h1 Create User

    .row.col-md-10.col-md-offset-1    
      form.prevent-enter-submit(action='/user/new', method='POST')
        .form-group
          label(for='id') ID
          input.form-control(type='text', id='id', name='id', placeholder='Ex: Coinhunter')

        .form-group
          label(for='name') Name
          input.form-control(type='text', id='name', name='name', placeholder='Ex: Conrad Ljungstr√∂m')

        .form-group
          label(for='name') Email
          input.form-control(type='email', id='email', name='email', placeholder='Email')

        .form-group
          label(for='password') Password
          input.form-control(type='password', id='password', name='password', placeholder='Password')

        .form-group
          label(for='password2') Password Again
          input.form-control(type='password', id='password2', name='password2', placeholder='Password')

        button.btn.btn-primary(type='submit') Create User