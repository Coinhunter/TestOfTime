extends layout

block content
  .container
      .row.col-md-10.col-md-offset-1
        h1 Create Category

      .row.col-md-10.col-md-offset-1
        form.prevent-enter-submit(action='/category/new', method='POST')
          .form-group
            label(for='year') Category
            input.form-control(type='text', id='category', name='category')
          button.btn.btn-primary(type='submit') Create Category
