extends layout

block content
  .container      
    .row
      .col-md-10.col-md-offset-1
        .panel.panel-default
          .panel-heading
            h3.panel-title Users
          .panel-body
            table.table.table-striped.table-hover.table-bordered
              tbody
                each user in users          
                  tr
                    td
                      if user.id == usr.id
                        a.userlink(href='/users/#{user._id}') #{user.id} (Me)
                      else
                        a.userlink(href='/users/#{user._id}') #{user.id}
                    td #{user.email}

                    td.tdiconwrap
                      if user.role == 'admin'
                        i(data-toggle='tooltip', title='Admin', data-placement='bottom').fa.fa-star
                      else
                        i(data-toggle='tooltip', title='Editor', data-placement='bottom').fa.fa-star-o